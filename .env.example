# VANSH Environment Configuration
# Copy this file to backend/.env and fill in your values

# Deepgram (optional, for real-time streaming)
DEEPGRAM_API_KEY=your-deepgram-key-here

# Google Gemini (Free writing engine)
GEMINI_API_KEY=your-gemini-key-here

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Flask / JWT
FLASK_ENV=production
FLASK_DEBUG=0
JWT_SECRET_KEY=change-this-to-a-random-secret-string
SECRET_KEY=change-this-to-a-random-secret-string

# CORS
CORS_ORIGINS=http://localhost:5173,https://your-domain.com

# Upload limits
MAX_AUDIO_SIZE_MB=50
MAX_VIDEO_SIZE_MB=500
